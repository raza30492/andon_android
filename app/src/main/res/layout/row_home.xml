<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/issue_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="1dp"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <in.andonsystem.view.LetterImageView
        android:id="@+id/issue_letter_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/issue_prob_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:maxLines="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:text="Problem xyz "/>

            <TextView
                android:id="@+id/issue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="10:00 AM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout1">

            <TextView
                android:id="@+id/issue_dept_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="12sp"
                android:layout_weight="2"
                android:paddingRight="8dp"
                android:text="Maintenance " />
            <TextView
                android:id="@+id/issue_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="[ 160 min] Line 1" />


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/issue_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>

