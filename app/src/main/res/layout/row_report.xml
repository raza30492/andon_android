<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <in.andonsystem.view.LetterImageView
        android:id="@+id/report_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/report_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_prob_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/report_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line 1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/report_layout1">

            <TextView
                android:id="@+id/report_dept_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem Name"
                android:textSize="12sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/report_downtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour 20 min"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>


